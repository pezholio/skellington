source 'https://rubygems.org'

ruby '<%= RUBY_VERSION %>'

<% for gem in @gen.config['gems']['production'] %>
gem '<%= gem %>'
<% end %>

group :test do
<% for gem in @gen.config['gems']['test'] %>
  gem '<%= gem %>'
<% end %>
<% for gem in @gen.config['gems']['test_require_false'] %>
  gem '<%= gem %>', require: false
<% end %>
end
